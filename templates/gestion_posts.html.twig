{% extends 'base.html.twig' %}

{% block title %}Liste des Posts{% endblock %}

{% block body %}
    <h1>Liste des Posts</h1>
    <table>
        <thead>
        <tr>
            <th><button onclick="sortTable(0)">ID</button></th>
            <th><button onclick="sortTable(1)">Auteur</button></th>
            <th><button onclick="sortTable(2)">Date</button></th>
            <th><button onclick="sortTable(3)">Titre</button></th>
            <th>Contenu</th>
            <th>Action</th>
        </tr>
        </thead>
        <tbody>
        {% for post in posts %}
            <tr id="post-{{ post.id }}">
                <td>{{ post.id }}</td>
                <td>{{ post.teacher.name }} {{ post.teacher.surname }}</td>
                <td>{{ post.date|date('Y-m-d H:i') }}</td>
                <td>{{ post.title }}</td>
                <td>{{ post.content }}</td>
                <td>
                    <button onclick="deletePost({{ post.id }})">Supprimer</button>
                    <a href="{{ path('post_edit', {'id': post.id}) }}">Modifier</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <script src="/js/post.js"></script>
{% endblock %}
